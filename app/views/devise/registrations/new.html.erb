<div class="form-container">
    <h1>SIGN UP</h1>

        <%= form_for(resource, :as => resource_name, url: registration_path(resource_name), data: {turbo: false})   do |f| %>
        <%= devise_error_messages! %>
            <div class="form-cellule mt-5">
                <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-button-input" %>
            </div>
            <div class="form-cellule mt-5">
                <%= f.password_field :password, placeholder: "Password", class: "form-button-input"%>
            </div>
            <div class="form-cellule mt-5">
                <%= f.password_field :password_confirmation, placeholder: "Password", class: "form-button-input"%>
            </div>
            <div class="mb-3">
                <%= f.submit "Sign un", class: "grey-button"%>
            </div>
        <% end %>

    <%= render "devise/shared/links" %>
</div>
