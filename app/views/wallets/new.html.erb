<div class="form-container-small">
    <h1>NEW WALLET</h1>
        <%= form_with model: @wallet do |f| %>
              <div class="form-cellule mt-5">
                  <%= f.text_field :name, placeholder: "Name", class: "form-button-input" %>
              </div>
              <div class="form-cellule mt-5 mb-4">
                  <%= f.text_field :category, placeholder: "Category", class: "form-button-input" %>
              </div>
              <div>
                  <%= f.submit class: "grey-button" %>
              </div>
        <% end %>
</div>
